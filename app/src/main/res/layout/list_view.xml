<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageViewBookCover"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBookName"
            android:text="BOOK NAME"
            android:layout_margin="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imageViewBookCover"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAuthors"
            android:text="BOOK AUTHORS"
            android:layout_margin="10dp"
            app:layout_constraintStart_toEndOf="@id/imageViewBookCover"
            app:layout_constraintTop_toBottomOf="@id/textViewBookName" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>